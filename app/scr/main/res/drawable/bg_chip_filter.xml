<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/fg_chip_bg_selected" />
            <corners android:radius="24dp" />
            <padding
                android:left="20dp"
                android:top="12dp"
                android:right="20dp"
                android:bottom="12dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/fg_chip_bg" />
            <corners android:radius="24dp" />
            <stroke
                android:width="1dp"
                android:color="@color/fg_divider" />
            <padding
                android:left="20dp"
                android:top="12dp"
                android:right="20dp"
                android:bottom="12dp" />
        </shape>
    </item>
</selector>

