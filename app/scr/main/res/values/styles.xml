<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SettingRowStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/bg_setting_row</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="SettingRowIcon">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:tint">@color/fg_primary_accent</item>
    </style>

    <style name="SettingRowContent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="SettingRowTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/fiverr_white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingRowSubtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/fg_muted_text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="SettingRowArrow">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:src">@android:drawable/ic_media_next</item>
        <item name="android:tint">@color/fg_muted_text</item>
    </style>

</resources>

